<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="14dp">

<!-- Контейнер для аватара и онлайн-статуса -->
<FrameLayout
    android:id="@+id/avatarContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <!-- Аватар пользователя -->
    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_profile"
        android:background="@drawable/ic_user_avatar"
        android:padding="2dp"
        android:contentDescription="Аватар пользователя"/>

    <!-- Индикатор онлайн -->
    <View
        android:id="@+id/vOnlineStatus"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/bg_online_status"
        android:backgroundTint="#4CAF50"
        android:visibility="gone"
        android:translationX="2dp"
        android:translationY="2dp"/>

</FrameLayout>

<!-- Информация о чате -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toEndOf="@id/avatarContainer"
    app:layout_constraintEnd_toStartOf="@id/tvMessageTime"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <!-- Название чата -->
    <TextView
        android:id="@+id/tvChatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название чата"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Последнее сообщение с именем отправителя -->
    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Отправитель: Последнее сообщение..."
        android:textSize="14sp"
        android:textColor="#757575"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>

<!-- Время последнего сообщения -->
<TextView
    android:id="@+id/tvMessageTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="12:30"
    android:textSize="12sp"
    android:textColor="#9E9E9E"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>