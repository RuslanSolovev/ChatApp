<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#F0F6DA"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="72dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <!-- Аватар пользователя -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_default_profile"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Имя отправителя -->
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#2B2C2D"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Имя отправителя"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivUserAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"/>

        <!-- Контейнер ответа -->
        <LinearLayout
            android:id="@+id/replyContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E0E0E0"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvSenderName"
            app:layout_constraintStart_toEndOf="@id/ivUserAvatar"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvReplySender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2B2C2D"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Ответ пользователю"/>

            <TextView
                android:id="@+id/tvReplyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#21292F"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Текст ответа..."/>
        </LinearLayout>

        <!-- Контейнер для текстового сообщения -->
        <LinearLayout
            android:id="@+id/textMessageContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/replyContainer"
            app:layout_constraintStart_toEndOf="@id/ivUserAvatar"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvMessageText"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                tools:text="Текст сообщения"
                android:layout_marginStart="6dp"/>

        </LinearLayout>

        <!-- Контейнер для изображения (полноразмерный) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageMessageContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@id/replyContainer"
            app:layout_constraintStart_toEndOf="@id/ivUserAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivMessageImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:minHeight="150dp"
                app:layout_constraintDimensionRatio="H,4:3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedCorners"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:background="#80000000"
                android:padding="8dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@id/ivMessageImage">

                <TextView
                    android:id="@+id/tvImageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="12:34"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Время сообщения (справа снизу) -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="10sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12:34"/>

        <!-- Отметка о редактировании -->
        <TextView
            android:id="@+id/tvEdited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edited"
            android:textColor="#666666"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTime"
            app:layout_constraintTop_toTopOf="@id/tvTime"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>