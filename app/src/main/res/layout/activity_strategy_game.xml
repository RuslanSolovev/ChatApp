<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/bg_gradient">

    <!-- Информация о ресурсах -->
    <TextView
        android:id="@+id/tvPlayerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ресурсы игрока"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Карта -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGameMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:padding="4dp" />

    <!-- Кнопки управления (строим, нанимаем, атакуем) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Строительство -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btnBuildBarracks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Казармы"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnBuildTownHall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ратуша"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnBuildMine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Шахта"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginStart="2dp" />

        </LinearLayout>

        <!-- Найм юнитов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btnHireSoldier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Солдат"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnHireArcher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Лучник"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnHireTank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Танк"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginStart="2dp" />

        </LinearLayout>

        <!-- Остальные кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btnNextTurn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ход"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnAttack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Атака"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginStart="2dp" />

        </LinearLayout>

        <!-- Статус -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="4dp" />

    </LinearLayout>

</LinearLayout>