<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Заголовок чата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary_color"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnOpenDialogs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_history"
                android:contentDescription="История диалогов"
                app:tint="@color/white"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Чат с ассистентом"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:id="@+id/btnSaveDialog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_save"
                android:contentDescription="Сохранить диалог"
                app:tint="@color/white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Контейнер для сообщений -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <!-- Панель ввода сообщения -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btnClearDialog"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_clear"
                android:contentDescription="Очистить диалог"
                app:tint="@color/secondary_text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:hint="Введите сообщение..."
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:background="@drawable/edit_text_background"
                android:paddingVertical="14dp"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:maxLines="5"
                android:gravity="center_vertical"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine" />

            <ImageButton
                android:id="@+id/btnSendMessage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_send"
                android:contentDescription="Отправить сообщение"
                app:tint="@color/primary_color"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Боковая панель для сохраненных диалогов -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="16dp">

        <!-- Заголовок боковой панели -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary_color"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сохраненные диалоги"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseDialogs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="Закрыть"
                app:tint="@color/white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Список сохраненных диалогов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSavedDialogs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

        <!-- Подсказка если диалогов нет -->
        <TextView
            android:id="@+id/tvEmptyDialogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нет сохраненных диалогов"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>