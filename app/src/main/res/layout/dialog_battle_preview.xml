<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Атакующая армия -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/battle_side_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvAttackerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Атакующий"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#5BE044"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvAttackerUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Юниты..."
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvAttackerPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сила: 0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="#CCCCCC"
            android:layout_marginHorizontal="8dp" />

        <!-- Защищающаяся армия -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/battle_side_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvDefenderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Защитник"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDefenderUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Юниты..."
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvDefenderPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сила: 0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Предсказание результата -->
    <TextView
        android:id="@+id/tvPrediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Шанс победы: 50%"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:background="#E3F2FD"
        android:padding="8dp"
        android:textColor="#1976D2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердите начало боя"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="#666" />

</LinearLayout>