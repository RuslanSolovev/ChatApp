<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Компактная навигация поверх контента -->
    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text_rounded"
        android:elevation="4dp"
        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnNews"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/nav_button_background"
            android:contentDescription="Новости"
            android:padding="6dp"
            android:src="@drawable/ic_external_news" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnChats"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/nav_button_background"
            android:contentDescription="Чаты"
            android:padding="6dp"
            android:src="@drawable/ic_chat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnGroups"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/nav_button_background"
            android:contentDescription="Беседы"
            android:padding="6dp"
            android:src="@drawable/ic_group" />

    </LinearLayout>

</FrameLayout>