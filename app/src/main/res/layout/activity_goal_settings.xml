<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Общая цель -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ежедневная цель"
                    android:textSize="20sp"
                    android:textColor="@color/alarm_primary"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekBar_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="30000"
                    android:progress="10000" />

                <TextView
                    android:id="@+id/tv_goal_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10000 шагов"
                    android:textSize="18sp"
                    android:textColor="@color/alarm_primary"
                    android:gravity="center"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1000"
                        android:textSize="12sp"
                        android:textColor="@color/alarm_primary"
                        android:gravity="start" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15000"
                        android:textSize="12sp"
                        android:textColor="@color/alarm_primary"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="30000"
                        android:textSize="12sp"
                        android:textColor="@color/alarm_primary"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Переключатель индивидуальных целей -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_custom_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Индивидуальные цели по дням недели"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Контейнер для индивидуальных целей -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_custom_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <!-- Понедельник -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_day_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Понедельник"
                        android:textSize="16sp"
                        android:textColor="@color/alarm_primary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <android.widget.ImageButton
                            android:id="@+id/btn_decrease"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_save"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Уменьшить" />

                        <TextView
                            android:id="@+id/tv_day_goal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="10000"
                            android:textSize="16sp"
                            android:textColor="@color/alarm_primary"
                            android:gravity="center"
                            android:paddingHorizontal="8dp" />

                        <android.widget.ImageButton
                            android:id="@+id/btn_increase"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_add"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Увеличить" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Повторить для остальных дней недели -->
            <!-- Вторник -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_monday">

                <!-- Такая же структура как для понедельника -->
            </androidx.cardview.widget.CardView>

            <!-- Среда -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_tuesday">

                <!-- Такая же структура -->
            </androidx.cardview.widget.CardView>

            <!-- Четверг -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_wednesday">

                <!-- Такая же структура -->
            </androidx.cardview.widget.CardView>

            <!-- Пятница -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_thursday">

                <!-- Такая же структура -->
            </androidx.cardview.widget.CardView>

            <!-- Суббота -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_friday">

                <!-- Такая же структура -->
            </androidx.cardview.widget.CardView>

            <!-- Воскресенье -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/card_saturday">

                <!-- Такая же структура -->
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Отмена"
                android:textColor="@color/alarm_background"
                android:background="@color/alarm_primary" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Сохранить"
                android:textColor="@color/alarm_background"
                android:background="@color/alarm_primary" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>