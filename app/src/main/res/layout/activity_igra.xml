<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите игру"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Основной контейнер для игр -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <!-- Верхний ряд (2 игры) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Карточка "Угадай число" -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_guess_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ygadai"
                    android:scaleType="centerCrop"
                    android:contentDescription="Угадай число" />

            </androidx.cardview.widget.CardView>

            <!-- Карточка "Сложение чисел" -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_addition_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sum"
                    android:scaleType="centerCrop"
                    android:contentDescription="Сложение чисел" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Нижний ряд (2 игры) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Карточка "Шахматы" -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_chess"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/chess"
                    android:scaleType="centerCrop"
                    android:contentDescription="Шахматы" />

            </androidx.cardview.widget.CardView>

            <!-- Карточка "На память" -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_memory_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mozgi"
                    android:scaleType="centerCrop"
                    android:contentDescription="На память" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Пятая игра — полная ширина -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_strategy_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/strategy"
            android:scaleType="centerCrop"
            android:contentDescription="Стратегия" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>