<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Фоновое изображение -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/alarm_primary"
        android:scaleType="centerCrop"
        android:contentDescription="Background" />

    <!-- Контейнер с закругленными углами сверху -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="45dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Сетка игр -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:fillViewport="true"
                android:layout_marginBottom="110dp"
                android:padding="8dp">

                <GridLayout
                    android:id="@+id/grid_games"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:rowOrderPreserved="false"
                    android:padding="4dp">

                    <!-- Карточка 1: "Угадай число" -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_guess_number"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/alarm_primary">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ygadai"
                                android:scaleType="centerCrop"
                                android:contentDescription="Угадай число" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="12dp"
                                android:text="Угадай число"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Карточка 2: "Сложение чисел" -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_addition_game"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/sum"
                                android:scaleType="centerCrop"
                                android:contentDescription="Сложение чисел" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="12dp"
                                android:text="Сложение чисел"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Карточка 3: "Шахматы" -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_chess"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chess"
                                android:scaleType="centerCrop"
                                android:contentDescription="Шахматы" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="12dp"
                                android:text="Шахматы"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Карточка 4: "На память" -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_memory_game"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/mozgi"
                                android:scaleType="centerCrop"
                                android:contentDescription="На память" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="12dp"
                                android:text="На память"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Карточка 5: "Стратегия" -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_strategy_game"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/zastavka_igra_strategiy"
                                android:scaleType="centerCrop"
                                android:contentDescription="Стратегия" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="12dp"
                                android:text="Стратегия"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Карточка 6: "ПВО" -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pvo_game"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/pvo2"
                                android:scaleType="centerCrop"
                                android:contentDescription="ПВО - Уклонение от ракет" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="12dp"
                                android:text="ПВО"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Карточка 7: "Арканоид" - растянута на 2 колонки -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_block_game"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="2"
                        android:layout_rowWeight="1"
                        android:layout_gravity="fill"
                        android:layout_columnSpan="2"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="Арканоид - Разбей все блоки"
                                android:scaleType="centerCrop"
                                android:src="@drawable/igra_kirpiz" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/bottom_gradient"
                                android:padding="16dp"
                                android:text="Кирпичики - Разбей все блоки"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
