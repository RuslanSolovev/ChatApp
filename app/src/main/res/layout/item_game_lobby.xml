<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/ic_check"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGameHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Хост: Игрок"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGamePlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Игроков: 1/4"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnJoinGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Присоединиться"
                android:textSize="11sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnSpectateGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наблюдать"
                android:textSize="11sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>