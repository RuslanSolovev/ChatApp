<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Карта на весь экран -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Выдвижная шторка слева -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/left_sheet_background"
        android:elevation="24dp"
        android:outlineProvider="bounds">

        <!-- Заголовок шторки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/header_gradient">

            <!-- Ручка для перетаскивания (вертикальная) -->
            <View
                android:layout_width="4dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/drag_handle_gradient" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Статистика маршрута"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Кнопка закрытия -->
            <ImageButton
                android:id="@+id/btnCloseSheet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/circle_ripple"
                app:tint="@android:color/white"
                android:contentDescription="Закрыть" />

        </LinearLayout>

        <!-- Контент статистики с прокруткой -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/statsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Дистанция -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="🛣️"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Дистанция"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/Distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 км"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Время -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="⏱️"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Время"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 мин"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Средняя скорость -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="🚶"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Средняя скорость"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/AvgSpeed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 км/ч"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Максимальная скорость -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="💨"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Макс. скорость"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/MaxSpeed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 км/ч"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Калории -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="🔥"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Сожжено калорий"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/Calories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 ккал"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Кнопки управления с отступом снизу -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="150dp"
            android:background="@android:color/transparent">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Очистить маршрут"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_brown_gradient"
                android:textColor="@android:color/white"
                android:stateListAnimator="@null"
                android:elevation="4dp"
                android:translationZ="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка для управления шторкой -->
    <ImageButton
        android:id="@+id/btnToggleSheet"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="20dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_create_new_playlist"
        android:contentDescription="Показать статистику"
        android:elevation="8dp"
        android:translationZ="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>