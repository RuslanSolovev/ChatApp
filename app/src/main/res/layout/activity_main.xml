<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1F1"
    android:fitsSystemWindows="true">

    <!-- AppBar с кастомным Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F2F1F1"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Контейнер для аватарки и имени -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp">

            <!-- Аватар пользователя -->
            <ImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Аватар пользователя"
                android:src="@drawable/ic_default_profile" />

            <!-- Имя пользователя -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Иван Иванов"/>
        </LinearLayout>

        <!-- Кнопки справа -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <!-- Кнопка анкеты -->
            <ImageButton
                android:id="@+id/btnQuestionnaire"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_questionnaire"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Анкета"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <!-- Кнопка для музыки -->
            <ImageButton
                android:id="@+id/btnMusic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Музыка"
                android:src="@drawable/ic_music_note"
                android:layout_marginEnd="8dp"/>

            <!-- Кнопка меню -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Меню"
                android:src="@drawable/ic_chess_board"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Основной контент -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- Стильный приветственный виджет с современным дизайном -->
        <androidx.cardview.widget.CardView
            android:id="@+id/welcomeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="top"
            android:visibility="gone"
            android:alpha="0"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:translationY="-50dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/welcome_card_gradient">

                <!-- Заголовок и кнопка закрытия -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Аватарка в заголовке -->
                    <ImageView
                        android:id="@+id/ivWelcomeAvatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_default_profile"
                        android:contentDescription="Аватар"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tvWelcomeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Доброе утро!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageButton
                        android:id="@+id/btnCloseWelcome"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"
                        android:contentDescription="Закрыть"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Progress bar для индикации загрузки контента -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:visibility="visible"
                    app:trackColor="#E3E3E3"
                    app:trackCornerRadius="2dp"
                    app:indicatorColor="#4285F4"/>

                <!-- Контентная часть -->
                <LinearLayout
                    android:id="@+id/welcomeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:alpha="0"
                    android:visibility="gone">

                    <!-- Контекстный вопрос из анкеты -->
                    <TextView
                        android:id="@+id/tvWelcomeQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Формирую вопрос на основе ваших интересов..."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="sans-serif"/>

                    <!-- Разделитель -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginVertical="16dp"/>

                    <!-- Анализ диалога (продолжение темы) -->
                    <TextView
                        android:id="@+id/tvWelcomeContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Анализирую наши предыдущие обсуждения..."
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="sans-serif"/>

                    <!-- Кнопки действий -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btnStartChat"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="Начать диалог"
                            android:textSize="14sp"
                            android:background="@drawable/btn_primary_small"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"
                            android:stateListAnimator="@null"
                            android:elevation="0dp"/>

                        <Button
                            android:id="@+id/btnMaybeLater"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="Позже"
                            android:textSize="14sp"
                            android:background="@drawable/btn_outline_small"
                            android:textColor="#666666"
                            android:layout_marginStart="8dp"
                            android:stateListAnimator="@null"
                            android:elevation="0dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Полупрозрачная навигация с оригинальными иконками -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_nav_background"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>