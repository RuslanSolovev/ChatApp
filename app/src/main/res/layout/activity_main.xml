<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarm_primary"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:title=""
        android:background="@color/alarm_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextColor="@android:color/transparent"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        android:padding="0dp"
        app:contentPadding="0dp"
        android:layout_margin="0dp" >

    <!-- Контейнер для аватарки и имени -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingStart="6dp">

            <!-- Аватар пользователя -->
            <ImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="Аватар пользователя"
                android:src="@drawable/ic_default_profile" />

            <!-- Имя пользователя -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/alarm_background"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Иван Иванов"/>
        </LinearLayout>

        <!-- Кнопки справа -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <!-- Кнопка анкеты -->
            <ImageButton
                android:id="@+id/btnQuestionnaire"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_questionnaire"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Анкета"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <!-- Кнопка для музыки -->
            <ImageButton
                android:id="@+id/btnMusic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Музыка"
                android:src="@drawable/ic_music_note"
                android:layout_marginEnd="8dp" />

            <!-- Кнопка меню -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Меню"
                android:src="@drawable/ic_chess_board"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Основной контент -->

    <!-- Полупрозрачная навигация с оригинальными иконками -->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <!-- УЛУЧШЕННАЯ ПРИВЕТСТВЕННАЯ КАРТОЧКА - СТИЛЬНЫЙ ДИЗАЙН -->
        <androidx.cardview.widget.CardView
            android:id="@+id/welcomeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:alpha="0"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:translationY="-20dp"
            android:visibility="gone"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            app:cardBackgroundColor="@color/alarm_primary"
            app:cardCornerRadius="0dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/welcome_card_gradient_improved"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Заголовок и кнопка закрытия -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Аватарка в заголовке -->
                    <ImageView
                        android:id="@+id/ivWelcomeAvatar"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Аватар"
                        android:src="@drawable/ic_default_profile" />

                    <TextView
                        android:id="@+id/tvWelcomeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Доброе утро!"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnCloseWelcome"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Закрыть"
                        app:tint="@android:color/white"
                        android:src="@drawable/ic_close" />
                </LinearLayout>

                <!-- Progress bar для индикации загрузки контента -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="20dp"
                    android:visibility="visible"
                    app:indicatorColor="@android:color/white"
                    app:trackColor="#80FFFFFF"
                    app:trackCornerRadius="2dp" />

                <!-- Контентная часть -->
                <LinearLayout
                    android:id="@+id/welcomeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:visibility="gone">

                    <!-- Контекстный вопрос из анкеты -->
                    <TextView
                        android:id="@+id/tvWelcomeQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6dp"
                        android:text="Формирую вопрос на основе ваших интересов..."
                        android:textColor="#E0E0E0"
                        android:textSize="18sp" />

                    <!-- Разделитель -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="20dp"
                        android:background="#40FFFFFF" />

                    <!-- Анализ диалога (продолжение темы) -->
                    <TextView
                        android:id="@+id/tvWelcomeContext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6dp"
                        android:text="Анализирую наши предыдущие обсуждения..."
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <!-- Кнопки действий - УЛУЧШЕННЫЙ ВИД -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <Button
                            android:id="@+id/btnStartChat"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_welcome_primary"
                            android:elevation="2dp"
                            android:stateListAnimator="@null"
                            android:text="Продолжить"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnMaybeLater"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_welcome_primary"
                            android:elevation="0dp"
                            android:stateListAnimator="@null"
                            android:text="Позже"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_nav_background"
        android:elevation="8dp"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>