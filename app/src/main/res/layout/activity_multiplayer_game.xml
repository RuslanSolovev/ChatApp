<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Верхняя панель: Статус слева, игроки справа -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- Статус игры -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGameStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статус игры"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="start" />

            <TextView
                android:id="@+id/tvCurrentPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вы: Игрок"
                android:textSize="12sp"
                android:gravity="start" />

        </LinearLayout>

        <!-- Список игроков -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Игроки:"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlayersSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/2"
                android:textSize="12sp"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

    <!-- Информация: Ресурсы и юниты -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tvResources"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ресурсы: ..."
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvUnits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Юниты: 0"
            android:textSize="12sp"
            android:gravity="end"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Карта -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="4dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </ScrollView>
        </HorizontalScrollView>

        <!-- Управление -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnBuild"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Построить"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnEndTurn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Завершить ход"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnLeaveGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Покинуть"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>