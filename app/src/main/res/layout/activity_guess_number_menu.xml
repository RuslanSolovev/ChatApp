<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите уровень сложности"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Легкий уровень -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚶‍♂️"
                    android:textSize="24sp"
                    android:paddingEnd="16dp" />

                <Button
                    android:id="@+id/btn_easy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Легкий (1 - 100)"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:padding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Средний уровень -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏃‍♂️"
                    android:textSize="24sp"
                    android:paddingEnd="16dp" />

                <Button
                    android:id="@+id/btn_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Средний (1 - 1000)"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:padding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Сложный уровень -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⛰️"
                    android:textSize="24sp"
                    android:paddingEnd="16dp" />

                <Button
                    android:id="@+id/btn_hard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сложный (1 - 10000)"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:padding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Экспертный уровень -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏆"
                    android:textSize="24sp"
                    android:paddingEnd="16dp" />

                <Button
                    android:id="@+id/btn_expert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Эксперт (1 - 100000)"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:padding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>