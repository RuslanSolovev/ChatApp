<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎉 Уровень пройден!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvCurrentScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Счет: 100\nУровень 2 пройден!\n+ 120 баллов"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNextLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚀 Следующий уровень"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/btnExitToMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏠 Выйти в меню игры"
                android:textSize="16sp"
                android:padding="16dp"
                android:backgroundTint="@color/gray_500"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>