<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/diskusii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Чаты для обсуждения и дискуссий"
        android:textSize="22sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/moi_diskusii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Дискуссии, в которых я участвую"
        android:layout_marginTop="16dp"/>

    <!-- Список чатов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

    <!-- Кнопка создания новой беседы -->
    <Button
        android:id="@+id/fabCreateChatBeseda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="Создать беседу"
        android:src="@drawable/ic_add_chat" />
</LinearLayout>