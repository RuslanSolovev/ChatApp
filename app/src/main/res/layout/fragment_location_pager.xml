<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Контейнер навигации -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/navContainer"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        app:cardCornerRadius="38dp"
        android:layout_margin="6dp"
        android:background="@drawable/transparent_nav_background"
        android:clipToOutline="true"
        android:elevation="8dp"
        android:orientation="vertical"
        android:outlineProvider="background"
        android:padding="4dp">







        <!-- Кнопка "Мои друзья" -->
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="38dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/compactUsers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/mapp2"
                android:contentDescription="Мои друзья"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <!-- Кнопка "Найти меня" -->
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="38dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/compactRoute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/treker3"
                android:contentDescription="Найти меня"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</FrameLayout>