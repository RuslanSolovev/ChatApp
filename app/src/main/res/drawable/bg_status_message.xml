<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Основной цвет фона -->
    <solid android:color="@color/status_background" />

    <!-- Скругление углов -->
    <corners android:radius="8dp" />

    <!-- Опционально: тень -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

    <!-- Граница (опционально) -->
    <stroke
        android:width="1dp"
        android:color="@color/status_border" />
</shape>
