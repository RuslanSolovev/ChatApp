<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фон всего элемента (можно прозрачный, если фон задан снаружи) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#00000000"/> <!-- полностью прозрачный -->
        </shape>
    </item>

    <!-- Внешняя рамка -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <stroke android:width="1dp" android:color="#000000"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>

    <!-- Промежуток между рамками: внутренний прямоугольник с отступом -->
    <!-- Этот элемент создаёт "зазор", в котором будет видна внутренняя рамка -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="11dp"/>
            <stroke android:width="1dp" android:color="#FFFFFF"/>
            <solid android:color="#10FFFFFF"/> <!-- твой основной фон -->
        </shape>
    </item>

</layer-list>